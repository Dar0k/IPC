                                 <cursor>
                                    <Cursor fx:constant="DEFAULT" />
                                 </cursor>
                              </ImageView>
                           </children>
                        </AnchorPane>
                     </content>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </ScrollPane>
                  <VBox alignment="BOTTOM_RIGHT" pickOnBounds="false" prefHeight="105.0" prefWidth="34.0" spacing="25.0" StackPane.alignment="BOTTOM_RIGHT">
                     <children>
                        <VBox alignment="BOTTOM_RIGHT">
                           <children>
                              <Button fx:id="zoomInButton" mnemonicParsing="false" onAction="#handleZoomInButton" prefHeight="20.0" prefWidth="20.0">
                                 <graphic>
                                    <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../resources/plus.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="zoomOutButton" mnemonicParsing="false" onAction="#handleZoomOutButton" prefHeight="27.0" prefWidth="30.0">
