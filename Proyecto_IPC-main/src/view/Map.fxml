                        <Image url="@../resources/black-circle.png" />
                     </image>
                  </ImageView>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="line" mnemonicParsing="false" onAction="#handleLine" style="-fx-background-color: transparent;" toggleGroup="$group1">
               <graphic>
                  <ImageView fitHeight="100.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/remove.png" />
                     </image>
                  </ImageView>
               </graphic></ToggleButton>
            <ToggleButton fx:id="arc" mnemonicParsing="false" onAction="#handleArc" style="-fx-background-color: transparent;" toggleGroup="$group1">
               <graphic>
                  <ImageView fitHeight="62.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/arc.png" />
                     </image>
                  </ImageView>
               </graphic></ToggleButton>
            <ToggleButton fx:id="text" mnemonicParsing="false" onAction="#handleText" style="-fx-background-color: transparent;" toggleGroup="$group1">
               <graphic>
                  <ImageView fitHeight="91.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/text.png" />
                     </image>
                  </ImageView>
               </graphic></ToggleButton>
            <ToggleButton fx:id="eraser" mnemonicParsing="false" onAction="#handleEraser" style="-fx-background-color: transparent;" toggleGroup="$group1">
