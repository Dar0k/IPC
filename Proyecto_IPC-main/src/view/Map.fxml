                        <AnchorPane>
                           <children>
                              <ImageView fx:id="map1" onMousePressed="#mapMousePress" onMouseReleased="#mapMouseRelease" pickOnBounds="true" visible="false">
                                 <image>
                                    <Image url="@../resources/carta_nautica.jpg" />
